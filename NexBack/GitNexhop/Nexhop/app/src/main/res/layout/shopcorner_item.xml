<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/pad_3dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="@dimen/pad_5dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="@dimen/pad_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shopimg_layout"
        android:orientation="horizontal"
        android:background="@color/button_material_light">

        <RelativeLayout
            android:layout_weight="0.7"
            android:id="@+id/shopimg_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
               android:paddingTop="@dimen/pad_5dp"
                android:paddingBottom="@dimen/pad_5dp"
                android:layout_margin="@dimen/pad_10dp"
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/popularity_img1"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="@dimen/pad_5dp"
                android:layout_marginBottom="@dimen/pad_5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relaince Fresh"
                    android:textColor="@color/main_grey_dk1"
                    android:textSize="@dimen/txt_16sp"
                    android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/lbl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_10dp"
                        android:text="$000-$00hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
                        android:textColor="@color/main_grey_dk1"
                        android:textSize="@dimen/txt_13sp"
                        />

                    <TextView
                        android:id="@+id/lbl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xyz.com"
                        android:textColor="@color/main_grey"
                        android:textSize="@dimen/txt_12sp" />

                <TextView
                    android:id="@+id/lbl4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main_grey_dk1"
                    android:textSize="@dimen/txt_16sp" />
            </LinearLayout>

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/pad_5dp"
            >
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="hop"
                android:textSize="10sp"
                android:paddingRight="@dimen/pad_5dp"
                android:paddingLeft="@dimen/pad_5dp"
                android:layout_marginRight="@dimen/pad_3dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/app_button_style"
                />
            <TextView
                android:layout_marginTop="@dimen/pad_5dp"
                android:id="@+id/txt_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="2.2 km"
                android:padding="@dimen/pad_5dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
</LinearLayout>

</android.support.v7.widget.CardView>